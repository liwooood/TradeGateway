<?xml version="1.0" encoding="utf-8"?>
<config>

  <!--网络配置-->
  <communication>
    <ip>0.0.0.0</ip>

    <!--ssl pb， 需要淘汰-->
    <ssl>
      <enable>1</enable>
      <port>5000</port>
      <workerthreadpool>16</workerthreadpool>
      <sendthreadpool>16</sendthreadpool>
    </ssl>

    <!--java 4字节消息头， 需要淘汰-->
    <tcp>
      <enable>1</enable>
      <port>5001</port>
      <workerthreadpool>16</workerthreadpool>
      <sendthreadpool>16</sendthreadpool>
    </tcp>



    <ssl_new>
      <enable>0</enable>
      <port>5002</port>
      <workerthreadpool>16</workerthreadpool>
      <sendthreadpool>16</sendthreadpool>
    </ssl_new>


    <tcp_new>
      <enable>1</enable>
      <port>5003</port>
      <workerthreadpool>16</workerthreadpool>
      <sendthreadpool>16</sendthreadpool>
    </tcp_new>

    

    <!-- 大于以下设置会被压缩 -->
    <zlib>1024</zlib>

    <!-- 运行状态：0.debug 1.run-->
    <RunMode>0</RunMode>

  </communication>

  <Counter_Common>
    <!--恒生T2异步模式特殊处理-->
    <connectpool>
      <!--是否启用-->
      <enable>0</enable>
      
      <min>1</min>
      <increase>1</increase>
      <max>1</max>

      <!--单位为秒-->
      <connect_timeout>1</connect_timeout>
      <readwrite_timeout>10</readwrite_timeout>
      
      <server>
        <enable>1</enable>
        <servername></servername>
        <ip>10.103.2.224</ip>
        <port>21000</port>
        <username>KCXP00</username>
        <password>888888</password>
        <req>req_zb</req>
        <res>ans_zb</res>
      </server>
      <server>
        <enable>1</enable>
        <servername></servername>
        <ip>10.103.2.225</ip>
        <port>21000</port>
        <username>KCXP00</username>
        <password>888888</password>
        <req>req_zb</req>
        <res>ans_zb</res>
      </server>
    </connectpool>

    <!-- 连接柜台重试次数 -->
    <connect_retry>1</connect_retry>

    <!-- 业务失败重试次数 -->
    <business_retry>1</business_retry>
  </Counter_Common>

  <!--日志 -->
  <log>
    <!-- 日志级别 0debug, 1info, 2warn, 3error-->
    <loglevel>0</loglevel>

    <!-- 截取响应长度 -->
    <response_len>1024</response_len>

    <!--是否启用功能号过滤 0不启用 1启用，默认启用1，建议生产环境启用过滤-->
    <filterfuncid>0</filterfuncid>

    <!-- 是否过滤输出字段 0不启用，1启用，默认启用1, 建议生产环境启用过滤-->
    <filterfield>1</filterfield>

    <!-- 根据客户号单独生成日志 -->
    <filtercustid>123,456</filtercustid>

    <file>
      <enable>1</enable>
      <path>d:\tradegateway\log</path>
      <threadpool>1</threadpool>
    </file>

	<!-- 未实现-->
    <gui>
      <enable>0</enable>
      <showcount>20</showcount>
      <threadpool>8</threadpool>
    </gui>

	<!--未实现-->
    <mq>
      <enable>0</enable>
      <threadpool>8</threadpool>
      <min>5</min>
      <max>100</max>
      <increase>5</increase>
      <mqserver>172.16.3.58:8080</mqserver>
    </mq>
  </log>

  <!--业务系统信息-->
  <system>gtja.xml</system>

  
</config>
